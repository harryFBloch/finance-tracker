<table class = "table tabble-striped">
  <thead>
    <tr>
      <th>Symbol</th>
      <th>Current Price</th>
      <% if @user.id == current_user.id %>
        <th>Actions</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @user_cryptos.each do |user_crypto| %>
      <tr>
        <td>
          <%= user_crypto.ticker %>
        </td>
        <td> 
          <%= user_crypto.last_price %>
        </td>
        <% if @user.id == current_user.id %>
          <td>
            <%= link_to "Delete this crypto", user_crypto_path(user_crypto), method: :delete, data: {confirm: "Are You Sure?"}, class: "btn btn-xs btn-danger" %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>